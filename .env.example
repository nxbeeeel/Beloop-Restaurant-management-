# ============================================
# DATABASE
# ============================================

# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# 
# Local development:
# DATABASE_URL="postgresql://postgres:password@localhost:5432/beloop?schema=public"
#
# Neon (production):
# DATABASE_URL="postgresql://user:pass@ep-xxx.region.aws.neon.tech/neondb?sslmode=require"
DATABASE_URL="postgresql://postgres:password@localhost:5432/beloop?schema=public"


# ============================================
# AUTHENTICATION (Clerk)
# ============================================

# Get these from: https://dashboard.clerk.com
# 1. Create a new application
# 2. Go to API Keys
# 3. Copy the keys below

# Publishable key (safe to expose in browser)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."

# Secret key (keep private, server-side only)
CLERK_SECRET_KEY="sk_test_..."

# Optional: Clerk webhook secret (for user sync)
# CLERK_WEBHOOK_SECRET="whsec_..."


# ============================================
# APPLICATION
# ============================================

# Environment: development | production | test
NODE_ENV="development"

# Application URL (used for redirects, emails, etc.)
NEXT_PUBLIC_APP_URL="http://localhost:3000"


# ============================================
# GOOGLE SHEETS INTEGRATION (Optional)
# ============================================

# Method 1: Apps Script (Recommended for simplicity)
# No environment variables needed - just deploy the Apps Script
# and save the webhook URL in the Outlet settings

# Method 2: Service Account (Advanced)
# Get these from Google Cloud Console:
# 1. Create a service account
# 2. Enable Google Sheets API
# 3. Download JSON key file
# 4. Copy email and private key below

# GOOGLE_SERVICE_ACCOUNT_EMAIL="your-service-account@project.iam.gserviceaccount.com"
# GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"


# ============================================
# ERROR TRACKING (Optional - Sentry)
# ============================================

# Get from: https://sentry.io
# Create a new project and copy the DSN

# NEXT_PUBLIC_SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"
# SENTRY_AUTH_TOKEN="..."
# SENTRY_ORG="your-org"
# SENTRY_PROJECT="beloop"


# ============================================
# ANALYTICS (Optional)
# ============================================

# Vercel Analytics (automatic with Vercel deployment)
# No configuration needed

# PostHog (optional)
# NEXT_PUBLIC_POSTHOG_KEY="phc_..."
# NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Google Analytics (optional)
# NEXT_PUBLIC_GA_MEASUREMENT_ID="G-..."


# ============================================
# FILE STORAGE (Optional - Cloudinary)
# ============================================

# For receipt uploads, product images, etc.
# Get from: https://cloudinary.com

# NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"
# CLOUDINARY_API_KEY="..."
# CLOUDINARY_API_SECRET="..."


# ============================================
# EMAIL (Optional - Resend)
# ============================================

# For sending invitations, notifications, etc.
# Get from: https://resend.com

# RESEND_API_KEY="re_..."
# RESEND_FROM_EMAIL="noreply@yourdomain.com"


# ============================================
# RATE LIMITING (Optional - Upstash Redis)
# ============================================

# For API rate limiting
# Get from: https://upstash.com

# UPSTASH_REDIS_REST_URL="https://..."
# UPSTASH_REDIS_REST_TOKEN="..."
REDIS_URL="redis://localhost:6379"

# ============================================
# REALTIME (Optional - Pusher)
# ============================================
PUSHER_KEY="app-key"

# ============================================
# STORAGE (Optional - R2)
# ============================================
R2_ACCOUNT_ID="account-id"


# ============================================
# FEATURE FLAGS (Optional)
# ============================================

# Enable/disable features without code changes

# NEXT_PUBLIC_ENABLE_WASTAGE_TRACKING="true"
# NEXT_PUBLIC_ENABLE_GOOGLE_SHEETS="true"
# NEXT_PUBLIC_ENABLE_PURCHASE_ORDERS="true"
# NEXT_PUBLIC_ENABLE_DAILY_CLOSING="true"


# ============================================
# DEVELOPMENT ONLY
# ============================================

# Show debug information in development
# DEBUG="true"

# Skip authentication in development (NOT RECOMMENDED)
# SKIP_AUTH="false"

# Seed database with test data
# SEED_DATABASE="false"


# ============================================
# NOTES
# ============================================

# 1. Never commit this file with real credentials to Git
# 2. Use .env.local for local development (gitignored by default)
# 3. Use Vercel/Railway dashboard for production environment variables
# 4. Rotate secrets regularly for security
# 5. Use different credentials for development and production
# 6. Keep backup of production credentials in secure location (1Password, etc.)
